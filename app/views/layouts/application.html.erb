<!DOCTYPE html>
<html>
  <head>
    <title>GoNow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <% unless current_user %>
      <%= yield %>
    <% else %>
      <div class="container">
        <section class="left-header">
          <ul>
            <li><a>Feed</a></li>
            <li><a>Messages</a></li>
            <li><a>New post</a></li>
            <li><a>Settings</a></li>
            <div class="line-area">
              <div class="line"></div>
            </div>
            <li class="logout"><a>Logout</a></li>
          </ul>
        </section>
        <main class="main-content">
          <%= yield %>
        </main>
      </div>
    <% end %>
  </body>
</html>
