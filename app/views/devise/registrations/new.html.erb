<div class="container">
  <div class="form">
    <div class="title-form">
      <h2>Create an account</h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field-group">
        <div class="field w-40 pr-4">
          <%= f.label :name, class: 'label-form' %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", minlength: "3", pattern: "^[^\s]+(\s+[^\s]+)*$", placeholder: "John", required: true, class: 'input-form' %>
        </div>
        <div class="field w-60">
          <%= f.label :surname, class: 'label-form' %><br />
          <%= f.text_field :surname, autofocus: true, autocomplete: "surname", minlength: "3", pattern: "^[^\s]+(\s+[^\s]+)*$", placeholder: "Doe", required: true, class: 'input-form' %>
        </div>
      </div>
      <div class="field">
        <%= f.label :username, class: 'label-form' %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", minlength: "3", pattern: "^[^\s]+(\s+[^\s]+)*$", placeholder: "john_doe", required: true, class: 'input-form' %>
      </div>
      <div class="field">
        <%= f.label :email, class: 'label-form' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "john.doe@who.com", required: true,  class: 'input-form' %>
      </div>
      <div class="field-group">
        <div class="field w-50 pr-4">
          <%= f.label :password, class: 'label-form' %>
          <%# <% if @minimum_password_length > %>
          <%# <em>(<%= @minimum_password_length > characters minimum)</em> %>
          <%# <% end %>
          <%# <br /> %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "●●●●●●●●", class: 'input-form' %>
        </div>
        <div class="field w-50">
          <%= f.label :password_confirmation, class: 'label-form' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "●●●●●●●●", class: 'input-form' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "button-form" %>
        <p><%= render "devise/shared/links" %></p>
      </div>
    <% end %>
  </div>
</div>